    {
        "MatchRegexString": "^Steam$",
        "TargetCss": "Fixes/Remover/Main UI/RemoveShadow.css"
    },
	{
        "MatchRegexString": "^Steam$",
        "TargetCss": "Fixes/Remover/Main UI/RemoveUseless.css"
    },
	
	{
        "MatchRegexString": ".ModalDialogPopup",
        "TargetCss": "Fixes/Fix Location/Settings UI/SVGLocation.css"
    }
],
	
