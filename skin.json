            "description": "PlaceHolder",
            "default": "yes",
            "tab": "Refresh Design Config",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$", "Menu$", "SuperNav$"], "src": "RefreshUI/Main UI/Refresh Header/Account Style/Hide Profile Button.css"  
