{
	
	"UseDefaultPatches": true,	
    "Steam-WebKit": "webkit.css",	
    "RootColors": "Extra/CSS/root.css",
	
    "Conditions": {			
	
        "Badges for Contributes": {
            "description": "PlaceHolder",
            "default": "yes",
            "tab": "General",
            "values": {
                "no": {},
                "yes": {}
            }
        },
        "Rounding Avatars": {
            "description": "PlaceHolder",
            "default": "Rounded Square",
            "tab": "General",
            "values": {
                "Sharp": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "General/Rounding Avatars/Sharp/Main Avatars.css"
                    }
				},
                "Rounded Square": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "General/Rounding Avatars/Rounded Square/Main Avatars.css"
                    }
				},
				"Circle": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "General/Rounding Avatars/Circle/Main Avatars.css"
                    }
				}
            }
		},
