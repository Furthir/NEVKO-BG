        "[Header] - Move Bottom Bar to Top Bar.": {
            "description": "PlaceHolder",
            "default": "yes",
            "tab": "Refresh Design Config",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Main UI/Refresh Header/Compact Buttons/Compact Buttons.css"
                    },
					"TargetJs": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Main UI/Refresh Header/Compact Buttons/Compact Buttons.js"
                    }
                },
                "no": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Main UI/Refresh Header/Fancy Bottom.css"
                    }
				}
            }
        },
		"[Header] - Move URL Bar to Bottom.": {
            "description": "PlaceHolder",
            "default": "yes",
            "tab": "Refresh Design Config",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Main UI/Refresh Header/Bottom URL Bar.css"
                    }
                },
                "no": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Main UI/Refresh Header/Top URL Bar.css"
                    }
                }
            }
        },
        "[Header] - Reorder Main Buttons.": {
            "description": "PlaceHolder",
            "default": "no",
            "tab": "Refresh Design Config",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Main UI/Refresh Header/Reorder Buttons.css"
                    }
                },
                "no": {}
            }
        },
        "[Header] - Hide Profile Button.": {
            "description": "PlaceHolder",
            "default": "yes",
            "tab": "Refresh Design Config",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$", "Menu$", "SuperNav$"], "src": "RefreshUI/Main UI/Refresh Header/Account Style/Hide Profile Button.css"  
					},
					"TargetJs": {
						"affects": ["Menu$", "SuperNav$"], "src": "RefreshUI/Main UI/Refresh Header/Account Style/Profile Buttons in Account Menu.js"
					}
                },
                "no": {}
            }
        },     				
		
		"[Account Menu] - Blur Account Name": {
            "description": "PlaceHolder",
            "default": "yes",
            "tab": "Hider",
            "values": {
                "yes": {				
				"TargetCss": {
						"affects": ["Menu$", "SuperNav$"], "src": "Hider/Blur Account/Account.css"
					}
				},
                "no": {}
            }
        },
		"[Account Button] - Hide Balance": {
            "description": "PlaceHolder",
            "default": "yes",
            "tab": "Hider",
            "values": {
                "yes": {				
				"TargetCss": {
						"affects": ["^Steam$"], "src": "Hider/Balance Acc/Balance.css"
					}
				},
                "no": {}
            }
        },
		
        "Extra Popup Menu [PLACEHOLDER]": {
            "description": "PlaceHolder",
            "default": "no",
            "tab": "Experimental",
            "values": {
                "yes": {},
                "no": {}
            }
        }	
	},
	
		"Patches": [
	{
        "MatchRegexString": "^Steam$",
        "TargetCss": "RefreshUI/Main UI/Refresh Header/Header Code.css"
	},
	
    {
        "MatchRegexString": "^Steam$",
        "TargetCss": "Fixes/Remover/Main UI/RemoveShadow.css"
    },
	{
        "MatchRegexString": "^Steam$",
        "TargetCss": "Fixes/Remover/Main UI/RemoveUseless.css"
    },
	
	{
        "MatchRegexString": ".ModalDialogPopup",
        "TargetCss": "Fixes/Fix Location/Settings UI/SVGLocation.css"
    },
	{
        "MatchRegexString": "^Steam$",
        "TargetCss": "Fixes/Return Old Style Tooltips/ROST.css"
    },

	{
        "MatchRegexString": "^Steam$",
        "TargetCss": "Fixes/Accents/Main Steam Elements.css"
    },	
	{
        "MatchRegexString": "Menu$",
        "TargetCss": "Fixes/Accents/Main Steam Elements.css"
    },
	{
        "MatchRegexString": "SuperNav$",
        "TargetCss": "Fixes/Accents/Main Steam Elements.css"
    },
	
	{
        "MatchRegexString": "^Steam$",
        "TargetCss": "Extra/CSS/accents-config.css"
    },
	{
        "MatchRegexString": "Menu$",
        "TargetCss": "Extra/CSS/accents-config.css"
    },
	{
        "MatchRegexString": "SuperNav$",
        "TargetCss": "Extra/CSS/accents-config.css"
    }
],
	
